{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "./test/**/*"]
}